<resources xmlns:tools="http://schemas.android.com/tools">
  <!-- Base application theme. -->
  <style name="Theme.DesignSystemAndroid" parent="EverliTheme">
    <!-- Primary brand color. -->
    <item name="colorPrimary">@color/purple_500</item>
    <item name="colorPrimaryVariant">@color/purple_700</item>
    <item name="colorOnPrimary">@color/white</item>
    <!-- Secondary brand color. -->
    <item name="colorSecondary">@color/teal_200</item>
    <item name="colorSecondaryVariant">@color/teal_700</item>
    <item name="colorOnSecondary">@color/black</item>
    <!-- Status bar color. -->
    <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    <!-- Customize your material theme here. -->

    <!-- Design system specific -->
    <item name="buttonColorPrimaryFillBackgroundEnabled">@color/violet_100</item>
    <item name="buttonColorPrimaryFillBackgroundPressed">@color/purple_80</item>
    <item name="buttonColorPrimaryOutlineBackgroundPressed">@color/purple_20</item>
    <item name="buttonColorPrimaryOutlineBorderEnabled">@color/purple_80</item>
    <item name="buttonColorPrimaryFlatBackgroundPressed">@color/purple_20</item>
  </style>

  <style name="Theme.DesignSystemAndroid.NoActionBar">
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
  </style>

  <style name="Theme.DesignSystemAndroid.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

  <style name="Theme.DesignSystemAndroid.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
