<?xml version="1.0" encoding="utf-8"?>
<resources>

  <!-- Define token so clients can override for XML wrapped components -->
  <!-- N.B. not are tokens are supported in XML -->
  <declare-styleable name="EverliTheme">
    <!-- Radius -->
    <attr name="radiusMedium" format="dimension" />
    <attr name="radiusFull" format="dimension" />

    <!-- Text -->
    <attr name="textColorPrimary" format="color" />
    <attr name="textColorNegative" format="color" />
    <attr name="textColorSpecial" format="color" />

    <!-- Icon -->
    <attr name="iconSizeSmall" format="dimension" />
    <attr name="iconSizeMedium" format="dimension" />
    <attr name="iconColorLight" format="color" />
    <attr name="iconColorDark" format="color" />
    <attr name="iconColorSpecial" format="color" />

    <!-- Button -->

    <!-- Button Text -->
    <attr name="buttonTextColorDisabled" format="color" />
    <attr name="buttonTextLinkEnabled" format="color" />
    <attr name="buttonTextLinkPressed" format="color" />

    <!-- Button Icon -->
    <attr name="buttonIconColorDisabled" format="color"/>
    <attr name="buttonIconColorLinkEnabled" format="color"/>
    <attr name="buttonIconColorLinkPressed" format="color"/>

    <!-- Button Color -->
    <!-- Button Color Transparent -->
    <attr name="buttonColorTransparentBackgroundEnabled" format="color"/>
    <attr name="buttonColorTransparentBackgroundDisabled" format="color"/>

    <!-- Button Color Fill -->
    <attr name="buttonColorFillBackgroundDisabled" format="color"/>

    <!-- Button Color Outline -->
    <attr name="buttonColorOutlineBorderDisabled" format="color"/>

    <!-- Button Color Primary -->
    <attr name="buttonColorPrimaryFillBackgroundEnabled" format="color" />
    <attr name="buttonColorPrimaryFillBackgroundPressed" format="color" />

    <attr name="buttonColorPrimaryOutlineBackgroundPressed" format="color" />
    <attr name="buttonColorPrimaryOutlineBorderEnabled" format="color" />

    <attr name="buttonColorPrimaryFlatBackgroundPressed" format="color" />

    <!-- Button Color Special -->
    <attr name="buttonColorSpecialFillBackgroundEnabled" format="color" />
    <attr name="buttonColorSpecialFillBackgroundPressed" format="color" />

    <attr name="buttonColorSpecialOutlineBackgroundPressed" format="color" />
    <attr name="buttonColorSpecialOutlineBorderEnabled" format="color" />

    <attr name="buttonColorSpecialFlatBackgroundPressed" format="color" />

  </declare-styleable>

</resources>
