<?xml version="1.0" encoding="utf-8"?>
<resources>

  <!-- Define token so clients can override for XML wrapped components -->
  <!-- N.B. not all tokens are supported in XML -->
  <declare-styleable name="EverliTheme">
    <!-- Radius -->
    <attr name="radiusSmall" format="dimension" />
    <attr name="radiusMedium" format="dimension" />
    <attr name="radiusLarge" format="dimension" />
    <attr name="radiusFull" format="dimension" />

    <!-- Text -->
    <attr name="textColorPrimary" format="color" />
    <attr name="textColorNegative" format="color" />
    <attr name="textColorSpecial" format="color" />

    <!-- Icon -->
    <attr name="iconSizeSmall" format="dimension" />
    <attr name="iconSizeMedium" format="dimension" />
    <attr name="iconColorLight" format="color" />
    <attr name="iconColorDark" format="color" />
    <attr name="iconColorSpecial" format="color" />

  </declare-styleable>

</resources>
