<?xml version="1.0" encoding="utf-8"?>
<resources>

  <!-- Typography -->
  <style name="EverliTypography" />

  <!-- Title1 -->
  <style name="EverliTypography.Title1">
    <item name="lineHeight">@dimen/lineHeightTitle1</item>
  </style>

  <style name="EverliTypography.Title1.Bold">
    <item name="android:textSize">@dimen/fontSizeTitle1Bold</item>
    <item name="android:fontFamily">@font/isidora_bold</item>
  </style>

  <!-- Title2 -->
  <style name="EverliTypography.Title2">
    <item name="lineHeight">@dimen/lineHeightTitle2</item>
  </style>

  <style name="EverliTypography.Title2.Bold">
    <item name="android:textSize">@dimen/fontSizeTitle2Bold</item>
    <item name="android:fontFamily">@font/isidora_bold</item>
  </style>

  <style name="EverliTypography.Title2.Semibold">
    <item name="android:textSize">@dimen/fontSizeTitle2Semibold</item>
    <item name="android:fontFamily">@font/fira_semibold</item>
  </style>

  <!-- Title3 -->
  <style name="EverliTypography.Title3">
    <item name="lineHeight">@dimen/lineHeightTitle3</item>
  </style>

  <style name="EverliTypography.Title3.Bold">
