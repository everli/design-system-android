  </style>

  <style name="EverliTypography.Body.Regular">
    <item name="android:fontFamily">@font/fira_regular</item>
  </style>

  <!-- Body Small -->
  <style name="EverliTypography.BodySmall">
    <item name="lineHeight">@dimen/lineHeightBodySmall</item>
    <item name="android:textSize">@dimen/fontSizeBodySmall</item>
  </style>

  <style name="EverliTypography.BodySmall.Semibold">
