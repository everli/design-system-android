root = true

[*]
indent_size = 2
max_line_length = 140

[*.{kt,kts}]
ij_kotlin_allow_trailing_comma_on_call_site = true
ij_kotlin_allow_trailing_comma = true
disabled_rules = no-blank-line-before-rbrace, import-ordering, filename

[*Test.kt] # same as above + max-line-length to allow more explicit test names
disabled_rules = max-line-length, no-blank-line-before-rbrace, no-wildcard-imports, import-ordering, filename
